@using CustomerMVC.ViewModels;
@model AddCustomerViewModel;
@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>
<form method="post" asp-controller="Customer" asp-action="Add">
    <div class="form-group">
        <label asp-for="name"></label>
        <input class="form-control" asp-for="name" />
        <span asp-validation-for="name"></span>
    </div>
    <div class="form-group">
        <label asp-for="address"></label>
        <input class="form-control" asp-for="address" />
        <span asp-validation-for="address"></span>
    </div>
    <div class="form-group">
        <label asp-for="creditLimit"></label>
        <input class="form-control" asp-for="creditLimit" />
        <span asp-validation-for="creditLimit"></span>
    </div>
    <div class="form-group">
        <label asp-for="lastOrdered"></label>
        <input class="form-control" asp-for="lastOrdered" />
        <span asp-validation-for="lastOrdered"></span>
    </div>
    <div class="form-group">
        <label asp-for="dateStarted"></label>
        <input class="form-control" asp-for="dateStarted" />
        <span asp-validation-for="dateStarted"></span>
    </div>
    <input type="submit" value="Add Customer" />


</form>
