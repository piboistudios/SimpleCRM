@using CustomerMVC.ViewModels;
@model AddVendorViewModel;
@{
    ViewData["Title"] = "AddVendor";
}

<h2>Add Vendor</h2>
<form method="post" controller="Vendor" action="Add">
    <div class="form-group">
        <label asp-for="name"></label>
        <input class="form-control" asp-for="name" />
        <span asp-validation-for="name"></span>
    </div>

    <div class="form-group">
        <label asp-for="margin"></label>
        <input class="form-control" asp-for="margin" />
        <span asp-validation-for="margin"></span>

    </div>

    <input type ="submit" value="Add Vendor" />

</form>

